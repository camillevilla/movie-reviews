<h1>Cinemagic</h1>
<p>A reviews site for the discerning movie-goer.</p>
<h2>Latest Reviews</h2>
<ul>
<% @movies.each do |movie| %>
  <li> <%= link_to movie.title, movie_path(movie) %> (<%= movie.reviews.length %> reviews) </li>
<% end %>
</ul>

<div id='Movie Search'>
  <h1>Movie Search</h1>
  <!-- <section id="fetch">
      <input type="text" placeholder="Enter a movie title" id="term" width="40" />
      <button id="search">Search</button>
  </section> -->
<%=form_for :movies do |f| %>
  <fieldset>
    <legend>Movie Title</legend>
    <%= f.label :movie %>
    <%= f.text_field :movie,:size=>"45",:class=>"search",:id=>"mov" %><br/>      
  </fieldset>
  <p><%= button_to "save and continue",{:class=>"savebutton"} %></p>
<%end%>

<div id='space'></div>
<div id="Answer Container">
  <section id="poster"></section>
</div>

</div>

<!-- Admin only -->
<% if user_signed_in? %>
  <button class="btn btn-secondary btn-lg"><%= link_to "Add New Movie", new_movie_path %></button>
<% end %>

<h2><%= link_to "Browse by Genre", genres_path %></h2>
<!-- eventually limit the number of genres displayed on homepage? -->
<div class="card-columns">
<% @genres.each do |genre| %>
    <div class="card text-xs-center">
      <div class="card-block">
        <h3 class="card-title"><%= link_to genre.name.titlecase, genre_path(genre) %></h3>
        
      </div>
    </div>
<% end %>
</div>

<!-- stuff from Blake -->
<% if notice %>
       <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
       <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <!-- Nav Bar  -->
  <!-- <nav class="navbar navbar-default navbar-fixed-top"> -->
